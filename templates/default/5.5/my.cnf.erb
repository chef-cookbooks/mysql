[client]
port                           = <%= @port %>
socket                         = <%= @socket_file %>

[mysqld_safe]
socket                         = <%= @socket_file %>
nice                           = 0

[mysqld]
user                           = mysql
pid-file                       = <%= @pid_file %>
socket                         = <%= @socket_file %>
port                           = <%= @port %>
<% if @basedir %>
basedir                        = <%= @base_dir %>
<% end %>
datadir                        = <%= @data_dir %>
tmpdir                         = /tmp
lc-messages-dir                = <%= @lc_messages_dir %>

[mysql]
!includedir <%= @include_dir %>
